<h1>Create a new project</h1>

<form action="/projects" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
  </div>

  <div class="form-group">
    <label for="githubLink">Github Link</label>
    <input type="text" class="form-control" id="githubLink" placeholder="http://" name="githubLink" required>
  </div>

  <div class="form-group">
    <label for="deployedLink">Deployed Link</label>
    <input type="text" class="form-control" id="deployedLink" placeholder="http://" name="deployedLink">
  </div>

 <div class="form-group">
    <label for="categories">Category</label>
    <input type="text" class="form-control" id="categories" name="categories" placeholder="Separate categories by commas" required>
    <% categories.forEach(function(c) { %>
      <span>[<%= c.name %>]</span>
    <% }); %>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="description" name="description" placeholder="Project Description" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary" value="Add Project">
</form>
