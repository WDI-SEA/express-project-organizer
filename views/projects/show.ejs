<h1><%= project.name %></h1>
<a class="btn btn-primary" href="<%= project.githubLink %>" target="_blank">
  <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
</a>
<a class="btn btn-primary" href="<%= project.deployLink %>" target="_blank">
  <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
</a>
<p><%= project.description %></p>
<% project.categories.forEach(function(category) { %>

  <div class="well">
    <h2>
      <a href="/categories/<%= category.id %>"><%= category.name %></a>
    </h2>
  </div>
<% }); %>

<hr />
<form method="POST" action="/projects/<%= project.id %>/category">
  <div class="form-group">
    <label for="category">Add a new category:</label>
    <input type="text" name="category" id="category" class="form-control">
  </div>
  <button class="btn btn-primary" type="submit">Add Category</button>
</form>