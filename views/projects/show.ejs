<h1><%= project.name %></h1>

<a class="btn btn-primary" href="<%= project.githubLink %>" target="_blank">
  <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
</a>

<a class="btn btn-primary" href="<%= project.deployLink %>" target="_blank">
  <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
</a>

<p><%= project.description %></p>

<hr />
<h4>Categories:</h4>
<div class="well">
<% project.categories.forEach(function(c) { %>
    <h4>
       <a href="/categories/<%= c.id %>"> <%=c.name %> </a>
    </h4>
 <% }); %>
</div>

<a href="/">&larr; Back Home</a>

<form method="POST" action="/projects/<%=project.id%>?_method=DELETE">
<button type="submit">Delete</button>
</form>

<div style="margin-top: 5px;">
<a class="btn btn-primary" href="/projects/<%=project.id%>/edit" target="_blank">
  <span class="glyphicon glyphicon-pencil"></span> 
  Edit this project
</a>
</div>