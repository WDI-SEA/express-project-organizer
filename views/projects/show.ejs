<h1 class="project-title"><%= project.name %></h1>

<a class="btn btn-primary" href="<%= project.githubLink %>" target="_blank">
  <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
</a>

<a class="btn btn-primary" href="<%= project.deployedLink %>" target="_blank">
  <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
</a>

<br />

<blockquote><p><%= project.description %></p></blockquote>

<hr />

<% if(project.categories && project.categories.length > 0){%>
	<h3 class="sub-title">Categories:</h3>
	<% project.categories.forEach(function(category){%>
			<a href="/categories/<%=category.id%>"><span class="badge"><%=category.content%>
			</span></a>
	<%})%>
<%}else{%>
	<h3>No categories yet!</h3>
	<% console.log(project.categories)%>
<%}%>
<hr />

<a href="/" class="btn btn-info">Back to My Projects</a>
