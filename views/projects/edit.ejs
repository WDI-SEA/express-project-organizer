<h1>Edit your project</h1>

<form action="/projects/<%=project.id%>/?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="<%=project.name%>" required>
  </div>

  <div class="form-group">
    <label for="githubLink">Github Link</label>
    <input type="text" class="form-control" id="githubLink" name="githubLink" value="<%=project.githubLink%>" required>
  </div>

  <div class="form-group">
    <label for="deployLink">Deployed Link</label>
    <input type="text" class="form-control" id="deployLink" name="deployLink" value="<%=project.deployLink%>" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="description" name="description" required><%=project.description%></textarea>
  </div>

  <hr />

  <div class="form-group">
    <label for="categoryName">Category Name</label>
    <% if (project.categories.length>1){%>
        <% let c = project.categories[0]%>
        <% for (let i=1; i < project.categories.length;i++){%>
            <% c = c+","+project.categories[i] %>
        <%} %>
        <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%=c%>" required>
    <%}else {%>
        <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%=project.categories[0].name%>" required>
    <%}%>
  </div>

  <input type="submit" class="btn btn-primary">
</form>