<h1><%= project.name %></h1>

<form action="/projects/<%=project.id%>/?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value = "<%= project.name %>"
            required
        />
    </div>

    <div class="form-group">
        <label for="githubLink">Github Link</label>
        <input
            type="text"
            class="form-control"
            id="githubLink"
            name="githubLink"
            value = "<%= project.githubLink %>"
            required
        />
    </div>

    <div class="form-group">
        <label for="deployedLink">Deployed Link</label>
        <input
            type="text"
            class="form-control"
            id="deployLink"
            name="deployedLink"
            value = "<%= project.deployLink %>"
            required
        />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea
            type="text"
            class="form-control"
            id="description"
            name="description"
            placeholder="<%= project.description %>"
            required
        ></textarea>
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <input
            type="text"
            class="form-control"
            id="category"
            name="category"
            value="<%= project.categories[0].name %> "
            required
        />
    </div>
    <br />
    <input type="submit" class="btn btn-primary" />
</form>